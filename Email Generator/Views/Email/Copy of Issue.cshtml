@model AppManagement.Areas.BBA.Models.MyBiz.IssueDetailViewModel
@{
    ViewBag.Title = "Issue";

    var Spotlight = Model.articleList.Where(category => category.category == 1).ToList();
    Spotlight.Sort((a, b) => a.position.CompareTo(b.position));
    
    var UpcomingEvents = Model.articleList.Where(category => category.category == 2).ToList();
    UpcomingEvents.Sort((a, b) => a.position.CompareTo(b.position));

    var WisconsinBBAArticles = Model.articleList.Where(category => category.category == 3).ToList();
    WisconsinBBAArticles.Sort((a, b) => a.position.CompareTo(b.position));

    var StudentOrgsAndLife = Model.articleList.Where(category => category.category == 4).ToList();
    StudentOrgsAndLife.Sort((a, b) => a.position.CompareTo(b.position));

    var BeyondGrainger = Model.articleList.Where(category => category.category == 5).ToList();
    BeyondGrainger.Sort((a, b) => a.position.CompareTo(b.position));
}

