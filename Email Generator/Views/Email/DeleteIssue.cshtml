@model Email_Generator.Models.Issue
@{
    ViewBag.Title = "Delete Issue";
}

<h2>Delete Issue</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Delete Issue</legend>

        <div class="labelName">@Html.LabelFor(m => m.semester)</div>
        <div class="field">@Html.DisplayFor(m => m.semester)</div>

        <div class="labelName">@Html.LabelFor(m => m.year)</div>
        <div class="field">@Html.DisplayFor(m => m.year)</div>

        <div class="labelName">@Html.LabelFor(m => m.volume)</div>
        <div class="field">@Html.DisplayFor(m => m.volume)</div>

        <div class="button-group">
            <input type="submit" value="Delete" class="button danger icon trash"/> 
            @Html.ActionLink("Edit", "EditIssue", new { id = Model.id }, new { @class = "button icon edit" })
            @Html.ActionLink("Cancel", "Index", new {  }, new { @class = "button danger icon remove" }) 
        </div>
    </fieldset>
}